<div class="card">
    <div class="card-header">
        <h1 class="card-title">Edit Ingredient.</h1>
    </div>
    <div class="card-body">
    <%= form_with model: @recipe_food, url: recipe_recipe_food_path, method: :put do |f| %>
        <%= f.hidden_field :id, value: @recipe_food.id %>
        <%= f.hidden_field :recipe_id, value: @recipe_food.recipe_id %>
        <div class="field-recipe">
          <%= f.select :food_id, @foods.map { |food| [food.name, food.id] }, {}, { class: "form-control"} %>
        </div>
        <div class="field-recipe">
          <%= f.number_field :quantity, placeholder: 'Quantity', min: 0, required: true, class: "form-control" %>
        </div>
        <div class="actions-recipe">
          <%= f.submit "Add Ingredient", class: 'btn' %>
        </div>
      <% end %>
    </div>
</div>